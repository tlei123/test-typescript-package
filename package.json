{
  "name": "@tlei123/test-typescript-package",
  "version": "0.2.4",
  "description": "",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "preversion": "git diff-index --quiet HEAD --",
    "postversion": "git push --follow-tags",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "clean": "node tools/cleanup",
    "package": "npm run build && npm pack",
    "addscope": "node tools/packagejson name @tlei123/test-typescript-package",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "example",
    "typescript",
    "npm",
    "package",
    "sample",
    "boilerplate",
    "starter",
    "demo",
    "cjs",
    "esm",
    "umd"
  ],
  "author": "Tzechiu Lei <tclei2009@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/tlei123/test-typescript-package#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:tlei123/test-typescript-package.git"
  },
  "bugs": {
    "url": "https://github.com/tlei123/test-typescript-package/issues"
  },
  "engines": {
    "node": "~16.14.2"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "mocha": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.4",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "acorn": "^8.7.1",
    "assert": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "pinst": "^2.1.6",
    "prettier": "^2.4.0",
    "ts-loader": "^9.2.5",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
